/* =============================================================
   HEADER AND ITS CHILDREN
   ============================================================= */

/* --- Header Labels --- */
QLabel #labelCompany {
  font - size: 12 pt;
  qproperty - alignment: 'AlignCenter';
}

QLabel #labelDate,
QLabel #labelDayTime {
  font - size: 12 pt;
}

/* Explicit padding so header text offsets are visible regardless of widget margins */
QLabel #labelDate {
  padding - left: 20 px; /* adjust as needed */
}

QLabel #labelDayTime {
  padding - right: 20 px; /* adjust as needed */
}

/* =============================================================
   SALES FRAME AND ITS CHILDREN
   ============================================================= */

/* --- Sales Frame Container --- */
QFrame #salesFrame {
  font - family: Tahoma, verdana;
  background - color: lightblue;
  border: 1 px solid #333333;
    border-radius: 0.5em;
}

/* --- Sales Label --- */
QLabel# salesLabel {
    font - size: 14 pt;
    qproperty - alignment: 'AlignCenter';
    min - height: 30 px;
    max - height: 30 px;
    padding: 0 px;
  }

  /* --- Sales Table --- */
  /* NOTE: Alternating row colors are NOT defined here in QSS.
     They are programmatically set in Python (see config.py) because
     we have embedded widgets (QLineEdit, QPushButton) in the table
     that require manual background color assignment.
     Row colors: even=#add8e6 (light blue), odd=#ffffe0 (light yellow) */
  QTableWidget #salesTable {
    border: 1 px solid #4317ab; 
    font-size: 10pt;
    font-weight: bold;
    background-color: # e4e4e4;
    gridline - color: rgba(0, 0, 0, 0.2);
  }

  QTableWidget #salesTable QHeaderView::section {
      background - color: #4682b4;
    color: white;
    border: 1px solid rgba(0,0,0,0.2); 
    font-size: 10pt;
    font-weight: bold;  
}

QTableWidget# salesTable::item: selected {
        background - color: transparent;
      }

      /* --- Quantity Input Field --- */
      QLineEdit #qtyInput {
        font - size: 10 pt;
        font - weight: bold;
        text - align: center;
        background - color: #fffbe6;
        border: 2 px solid #4682b4;
    border-radius: 5px;
}

QLineEdit# qtyInput: focus {
          background - color: orange;
          border: 3 px solid green;
        }

        QLineEdit #qtyInput[error = "true"] {
          border: 3 px solid red;
          background - color: #ffcccc;
        }

        /* --- Remove Button --- */
        QPushButton #removeBtn {
          /*font-size: 12pt;
          font-weight: bold;
          color: red;*/
          background - color: transparent; /* Transparent to show row color */
          border: 5 px solid #d33f12;
          border - radius: 2 px;
          min - width: 30 px;
          max - width: 30 px;
          min - height: 28 px;
          max - height: 28 px;
          padding: 0 px;
        }
        QPushButton #removeBtn: hover {
          background - color: rgba(255, 0, 0, 0.15); /* Light red tint on hover */
          border: 5 px solid red;
        }
        QPushButton #removeBtn: pressed {
            background - color: rgba(255, 0, 0, 0.3); /* Darker red tint when pressed */
            border: 5 px solid #990000;
}

/* --- Total Display Container --- */
QFrame# totalContainer {
                min - height: 26 px;
                padding: 0 px;
                border: 1 px solid #4317ab;
    border-radius: 2px;
    background: transparent;
}

QLabel# totalTitle,
                  QLabel #totalValue {
                    font - size: 32 px;
                    border: none;
                    background: white;
                    qproperty - alignment: 'AlignCenter';
                  }

                /* --- Add Buttons (vegBtn, manualBtn) --- */
                QPushButton #vegBtn,
                QPushButton #manualBtn {
                  border - radius: 18 px;
                  padding: 8 px 10 px;
                  color: white;
                  font - size: 14 pt;
                }

                QPushButton #vegBtn {
                  background - color: green;
                }
                QPushButton #vegBtn: hover {
                    background - color: #006400; 
}
QPushButton# vegBtn: pressed {
                        background - color: #004d00; 
}

QPushButton# manualBtn {
                          background - color: purple;
                        }
                        QPushButton #manualBtn: hover {
                            background - color: #5e0e5e; 
}
QPushButton# manualBtn: pressed {
                                background - color: #3c003c; 
}

/* --- Receipt Action Buttons (cancelsaleBtn, onholdBtn, viewholdBtn) --- */
QPushButton# cancelsaleBtn,
                                  QPushButton #onholdBtn,
                                  QPushButton #viewholdBtn {
                                    border - radius: 18 px;
