}

QScrollBar:horizontal {
    background: # a8d5e2;
                                                                                                                        height: 14 px;
                                                                                                                        margin: 0 px;
                                                                                                                        border - radius: 12 px;
                                                                                                                      }
                                                                                                                      QScrollBar::handle: horizontal {
                                                                                                                        background: #4682b4;
    min-width: 30px;
    border-radius: 12px;
    margin: 2px;
}
QScrollBar::handle:horizontal:hover {
    background: # 5 a9fd4;
                                                                                                                      }
                                                                                                                      QScrollBar::handle: horizontal: pressed {
                                                                                                                          background: #3a6a94;
}

