                                                                                                                    }

                                                                                                                    /* =============================================================
                                                                                                                       MENU FRAME (RIGHT SIDEBAR)
                                                                                                                       ============================================================= */
                                                                                                                    QFrame #menuFrame {
                                                                                                                      background - color: #b0c4de;
                                                                                                                      border: 1 px solid #333333;
    border-radius: 0.5em;
}

QFrame# menuFrame QPushButton {
                                                                                                                        /* Square icon-only buttons, centered visually */
                                                                                                                        min - width: 64 px;
                                                                                                                        max - width: 64 px;
                                                                                                                        min - height: 64 px;
                                                                                                                        max - height: 64 px;
                                                                                                                        padding: 0; /* let icon fill */
                                                                                                                        border: 1 px solid #999999;   /* gray border */
    border-radius: 8px;
    background: # ffffff; /* neutral background */
                                                                                                                        color: transparent; /* always hide text */
                                                                                                                        qproperty - iconSize: 56 px 56 px; /* fill nearly entire button */
                                                                                                                      }
                                                                                                                      QFrame #menuFrame QPushButton: hover {
                                                                                                                        border - color: #666666;
    background: # f5f5f5;
                                                                                                                      }
                                                                                                                      QFrame #menuFrame QPushButton: pressed {
                                                                                                                        border - color: #444444;
    background: # e9e9e9;
                                                                                                                      }

                                                                                                                      /* Fallback: show text if icon couldn't be loaded (set via iconFallback property) */
                                                                                                                      QFrame #menuFrame QPushButton[iconFallback = "true"] {
                                                                                                                        /* Fallback text style: black background, bold white text, white border */
                                                                                                                        background - color: #4a1717ff;
    color: # ffffff;
                                                                                                                        font - weight: bold;
                                                                                                                        border: 1 px solid #ffffff;

                                                                                                                        /* Size adjustments for text buttons */
                                                                                                                        min - width: 120 px;
                                                                                                                        max - width: 220 px;
                                                                                                                        min - height: 40 px;
                                                                                                                        max - height: 64 px;
                                                                                                                        qproperty - iconSize: 0 px 0 px;
                                                                                                                      }

                                                                                                                      /* Keep consistent look on hover/pressed for fallback buttons */
                                                                                                                      QFrame #menuFrame QPushButton[iconFallback = "true"]: hover {
                                                                                                                        background - color: #111111;
    border-color: # ffffff;
                                                                                                                      }
                                                                                                                      QFrame #menuFrame QPushButton[iconFallback = "true"]: pressed {
                                                                                                                        background - color: #222222;
    border-color: # dddddd;
                                                                                                                      }


