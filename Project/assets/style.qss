}

/* --- Refund Input Fields --- */
QLineEdit# refundInput {
                                                                                                                      border: 1 px solid #aaaaaa;
                                                                                                                      border - radius: 6 px;
                                                                                                                      padding: 8 px;
                                                                                                                      background - color: white;
                                                                                                                    }

                                                                                                                    /* --- Payment Input Fields Error State --- */
                                                                                                                    QLineEdit #cashInput[error = "true"],
                                                                                                                      QLineEdit #netsInput[error = "true"],
                                                                                                                      QLineEdit #paynowInput[error = "true"],
                                                                                                                      QLineEdit #voucherInput[error = "true"] {
