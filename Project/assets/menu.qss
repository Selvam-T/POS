
/* --------- Product Menu Styles --------- */

QDialog {
  background: #ffffff;
}
QLabel#subHeaderLabel {
  color: #222;
  font-size: 17px;
  font-weight: 600;
  padding: 4px 2px 6px 2px;
}
QLabel#productCodeLabel, QLabel#productNameLabel, QLabel#categoryLabel,
QLabel#sellingPriceLabel, QLabel#costPriceLabel, QLabel#unitLabel,
QLabel#supplierLabel, QLabel#lastUpdatedLabel {
  color: #444;
  font-size: 13px;
  font-weight: 500;
}
QLabel#productCodeDisplayLabel, QLabel#productNameDisplayLabel, QLabel#categoryDisplayLabel,
QLabel#sellingPriceDisplayLabel, QLabel#costPriceDisplayLabel, QLabel#unitDisplayLabel,
QLabel#supplierDisplayLabel, QLabel#lastUpdatedDisplayLabel {
  color: #222;
  background: #f6f8fa;
  border: 1px solid #e1e4e8;
  border-radius: 6px;
  padding: 4px 8px;
  min-height: 26px;
}
QLineEdit#productCodeLineEdit, QLineEdit#productNameLineEdit, QLineEdit#sellingPriceLineEdit,
QLineEdit#costPriceLineEdit, QLineEdit#supplierLineEdit, QLineEdit#lastUpdatedLineEdit,
QLineEdit#searchCodeLineEdit {
  min-height: 28px;
  padding: 4px 8px;
  border: 1px solid #cfd4dc;
  border-radius: 6px;
  background: #ffffff;
}
QLineEdit#productCodeLineEdit:focus, QLineEdit#productNameLineEdit:focus, QLineEdit#sellingPriceLineEdit:focus,
QLineEdit#costPriceLineEdit:focus, QLineEdit#supplierLineEdit:focus, QLineEdit#searchCodeLineEdit:focus {
  border-color: #2684ff;
}
QLineEdit:read-only {
  background: #f5f5f5;
  color: #555;
}
QComboBox#categoryComboBox, QComboBox#unitComboBox, QComboBox#searchNameComboBox {
  min-height: 28px;
  padding: 2px 6px;
  border: 1px solid #cfd4dc;
  border-radius: 6px;
  background: #ffffff;
}
QComboBox#categoryComboBox:focus, QComboBox#unitComboBox:focus, QComboBox#searchNameComboBox:focus {
  border-color: #2684ff;
}
QComboBox QAbstractItemView {
  background: #ffffff;
  border: 1px solid #cfd4dc;
  selection-background-color: #2684ff;
  selection-color: #ffffff;
}
QSlider#searchModeSlider::groove:horizontal {
  height: 12px;
  background: #e0e4e9;
  border-radius: 6px;
}
QSlider#searchModeSlider::handle:horizontal {
  background: #ffffff;
  border: 1px solid #cfd4dc;
  width: 18px;
  height: 18px;
  margin: -4px 0;
  border-radius: 9px;
}
QSlider#searchModeSlider::handle:horizontal:hover {
  border-color: #95a3b8;
}
QSlider#searchModeSlider::sub-page:horizontal {
  background: #2684ff;
  border-radius: 6px;
}
QSlider#searchModeSlider::add-page:horizontal {
  background: #e0e4e9;
  border-radius: 6px;
}
QLabel#statusLabel {
  min-height: 20px;
  font-size: 12px;
  padding: 2px 4px;
}
QPushButton#okButton {
  background: #2563eb;
  color: #ffffff;
  border: 1px solid #1d4ed8;
  border-radius: 8px;
  min-height: 30px;
  font-weight: 600;
  padding: 4px 14px;
}
QPushButton#okButton:hover { background: #1d4ed8; }
QPushButton#okButton:pressed { background: #1e40af; }
QPushButton#okButton:disabled { background: #94a3b8; border-color: #94a3b8; color: #fff; }
QPushButton#cancelButton {
  background: #e2e8f0;
  color: #1e293b;
  border: 1px solid #cbd5e1;
  border-radius: 8px;
  min-height: 30px;
  font-weight: 600;
  padding: 4px 14px;
}
QPushButton#cancelButton:hover { background: #cbd5e1; }
QPushButton#cancelButton:pressed { background: #94a3b8; }
QTabWidget::pane {
  border: 1px solid #d0d7de;
  border-radius: 6px;
  background: #fafbfc;
}
QTabBar::tab {
  background: #f1f5f9;
  padding: 6px 16px;
  margin-right: 2px;
  border: 1px solid #d0d7de;
  border-bottom: none;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
  font-weight: 500;
  color: #334155;
}
QTabBar::tab:selected {
  background: #ffffff;
  color: #111827;
  border-color: #d0d7de;
}
QTabBar::tab:hover { background: #e2e8f0; }
QTabBar::tab:!selected { margin-top: 2px; }
QScrollBar:vertical {
  background: transparent;
  width: 10px;
  margin: 0;
}
QScrollBar::handle:vertical {
  background: #cbd5e1;
  border-radius: 5px;
  min-height: 24px;
}
QScrollBar::handle:vertical:hover { background: #94a3b8; }
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical { height: 0; }
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical { background: transparent; }

/* --------- Vegetable Menu Styles --------- */

QDialog#VegetableMenuDialog {
  background: #ffffff;
}
QFrame#customTitleBar {
  background: transparent;
  border-bottom: 1px solid #e6e6e6;
}
QLabel#customTitle {
  color: #222;
  font-size: 18px;
  font-weight: 700;
}
QPushButton#customCloseBtn {
  border: 1px solid transparent;
  border-radius: 14px;
  background: transparent;
  color: #333;
  padding: 0px;
}
QPushButton#customCloseBtn:hover {
  background: #ffe5e5;
  border-color: #ffc2c2;
}
QPushButton#customCloseBtn:pressed {
  background: #ffc9c9;
}
QLabel#label_title {
  color: #222;
  font-size: 18px;
  font-weight: 700;
}
QLabel {
  color: #222;
}
QLabel#label_not_used_1, QLabel#label_not_used_2, QLabel#label_not_used_3,
QLabel#label_not_used_4, QLabel#label_not_used_5, QLabel#label_not_used_6,
QLabel#label_not_used_7, QLabel#label_not_used_8, QLabel#label_not_used_9,
QLabel#label_not_used_10, QLabel#label_not_used_11, QLabel#label_not_used_12,
QLabel#label_not_used_13, QLabel#label_not_used_14, QLabel#label_not_used_15,
QLabel#label_not_used_16 {
  color: #888;
}
QLabel[rightIndicator="true"][active="true"] {
  color: #222;
  font-weight: 600;
}
QLabel[rightIndicator="true"][active="false"] {
  color: #888;
  font-weight: 500;
}
QLineEdit {
  min-height: 28px;
  padding: 4px 8px;
  border: 1px solid #cfcfcf;
  border-radius: 6px;
  background: #ffffff;
}
QLineEdit[active="true"] {
  border-color: #2684ff;
}
QLineEdit:read-only {
  background: #f5f5f5;
  color: #555;
}
QLineEdit[active="true"] {
  color: #222;
}
QLineEdit[active="false"] {
  color: #888;
}
QLineEdit[active="false"]:read-only {
  color: #888;
}
QSlider::groove:horizontal {
  border: none;
  height: 20px;
  background: #d0d5dd;
  border-radius: 10px;
  margin: 0px;
}
QSlider::handle:horizontal {
  background: #ffffff;
  border: 1px solid #cfd8e3;
  width: 20px;
  height: 20px;
  margin: 0px -1px;
  border-radius: 10px;
}
QSlider::handle:horizontal:hover {
  border-color: #95a3b8;
}
QSlider::sub-page:horizontal, QSlider::add-page:horizontal {
  background: #d0d5dd;
  border: none;
  height: 20px;
  margin: 0px;
  border-radius: 10px;
}
QSlider[active="true"]::groove:horizontal {
  background: #22c55e;
}
QSlider[active="true"]::sub-page:horizontal,
QSlider[active="true"]::add-page:horizontal {
  background: #22c55e;
}
QScrollArea {
  background: transparent;
  border: none;
}
QScrollBar:vertical {
  background: transparent;
  width: 10px;
  margin: 0px;
}
QScrollBar::handle:vertical {
  background: #d7dde5;
  border-radius: 5px;
  min-height: 24px;
}
QScrollBar::handle:vertical:hover {
  background: #c7cfda;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
  background: transparent;
  height: 0px;
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
  background: transparent;
}
QFrame#messageArea {
  background: transparent;
}
QLabel#messageLabel[kind="error"] {
  color: #b91c1c;
}
QLabel#messageLabel[kind="info"] {
  color: #0c4a6e;
}
QLabel#messageLabel[kind="success"] {
  color: #166534;
}
QPushButton#pushButton_ok {
  background: #22c55e;
  color: #fff;
  border: 1px solid #1e9f4c;
  border-radius: 8px;
}
QPushButton#pushButton_ok:hover {
  background: #1fb156;
}
QPushButton#pushButton_ok:pressed {
  background: #19924a;
}
QPushButton#pushButton_cancel {
  background: #e9edf2;
  color: #222;
  border: 1px solid #d5dbe3;
  border-radius: 8px;
}
QPushButton#pushButton_cancel:hover {
  background: #dde3eb;
}
QPushButton#pushButton_cancel:pressed {
  background: #cfd6df;
}

