/* =============================================================
   BASE APPLICATION
   ============================================================= */
QMainWindow {
  background - color: #F0F0F0;
  font - family: Dubai, Helvetica, sans - serif;
}

/* =============================================================
   COMMON BUTTON FONT
   Apply a unified font to all QPushButtons
   ============================================================= */
QPushButton {
  font - family: Segoe UI, Tahoma, sans - serif;
}

QHBoxLayout #titleBar,
QHBoxLayout #workArea {
  margin - left: 15 px;
}

/* QWidget selector is for designing purpose only */
/*
