/* sales.qss: Styles for sales-related dialogs and widgets */

CancelSaleDialog, #CancelSaleDialog {
    background: #fff8f8;
}

OnHoldDialog, #OnHoldDialog {
    background: #f8fff8;
}

ViewHoldDialog, #ViewHoldDialog {
    background: #f8f8ff;
}

QPushButton {
    min-width: 80px;
    min-height: 32px;
    font-size: 15px;
}

QLabel {
    font-size: 16px;
    color: #333;
}

QListWidget {
    font-size: 15px;
    background: #f4f4f4;
    border: 1px solid #ccc;
}
