}
QPushButton# cancelsaleBtn: pressed {
                                          background - color: #4b0400; 
}

QPushButton# onholdBtn {
                                              background - color: #998900;
}
QPushButton# onholdBtn: hover {
                                                background - color: #b3a300;
                                              }
                                              QPushButton #onholdBtn: pressed {
                                                  background - color: #7a6f00; 
}

QPushButton# viewholdBtn {
                                                      background - color: #006699;
}
QPushButton# viewholdBtn: hover {
                                                          background - color: #0077b3; 
}
QPushButton# viewholdBtn: pressed {
                                                              background - color: #004d73; 
}

